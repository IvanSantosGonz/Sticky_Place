<div class="user_info">
  <a href="<%= user_path(current_user) %>">
   <% if !(current_user).photos.empty? %>
        <% for photo in (current_user).photos %>
	             <%= image_tag photo.avatar.url(:medium) %>
	     <% end %>
	  <% else %>
	      <img src="/images/missing_medium.png" alt="photo" id = "photo_medium" /> 
	  <% end %> 
    <span class="user_name">
      <%= current_user.name %>
    </span>
    <span class="microposts">
      <%= pluralize(current_user.microposts.count, "micropost") %>
    </span>
  </a>
</div>