<header>
	<div class="container_12">  
   		<div class="grid_3">
			<%= link_to logo, root_path %>
		</div>
		<div class="grid_3 push_5 round">
  			<nav>
  					<ul>
							<% if signed_in? %>
								<li><%= link_to "Home", root_path %></li>
					 			<li><%= link_to "Profile", current_user %></li>
					 	 		<li><%= link_to "Settings", edit_user_path(current_user) %></li>
					 	  		<li><%= link_to "Users", users_path %></li>
							<% end %>
							<% if signed_in? %>
								<li><%= link_to "Sign out", signout_path, :method => :delete %></li>
							<% else %>
								<li id = "header_form" >
									<%= form_for(:session, :url => sessions_path) do |f| %>
		
										<%= f.text_field :email, :placeholder => "email" , :style=>'width: 140px' ,:class => "field"%>
										<%= f.password_field :password,:placeholder => "password" , :style=>'width: 140px',:class => "field" %>
					
										<%= f.submit "Sign in", :class => "enviar" %>
									<% end %>
								</li>
							<% end %>
					 </ul>
				</div>
 			</nav>
	</div>
	<div class="clear"></div>
</header>
		