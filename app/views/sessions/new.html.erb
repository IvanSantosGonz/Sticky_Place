<h1>Sign in</h1>

<div class="grid_4 push_6">
<%= form_for(:session, :url => sessions_path) do |f| %>
	<div class="field">
		<%= f.label :email %><br />
		<%= f.text_field :email , :placeholder => "email" , :style=>'width: 140px' ,:class => "field" %>
	</div>

	<div class="field">
		<%= f.label :password %><br />
		<%= f.password_field :password , :placeholder => "password" , :style=>'width: 140px' ,:class => "field" %>
	</div>

	<div class="actions">
		<%= f.submit "Sign in", :class => "enviar" %>
	</div>
<% end %>
</div>
<p>New user? <%= link_to "Sign up now!", signup_path %></p>
